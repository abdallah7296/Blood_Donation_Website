@{
    ViewData["Title"] = "Contact Us";
}

<div class="container">
<div class="registration-form">
    <form>
        <h2 class="title">Contact Us</h2>
        <div class="form-row">
            <div class="form-group">
                <label for="Full Name">Full Name:</label>
                <input type="text" id="Full Name" name="Full Name" placeholder="enter your name" required>
            </div>

            <div class="form-group">
                <label for="Email">Email:</label>
                <input type="Email" id="Email" name="Email" placeholder="enter your email" required>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label for="Phone Number">Phone Number:</label>
                <input type="text" id="Phone Number" name="Phone Number" placeholder="enter your phone number" required>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label for="Message">Message:</label>
                <textarea id="Message" name="Message" rows="4" placeholder="enter your Message"></textarea>
            </div>
        </div>		
		
        <div class="form-button">
            <button type="button" onclick="redirectToThanks()">Send</button>
        </div>
    </form>
</div>
</div>

<script>
    function redirectToThanks() {
        window.location.href = 'Thanks.html';
    }
</script>