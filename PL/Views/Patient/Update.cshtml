@model PatientDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/admin_Layout.cshtml";
}

<h1>Update</h1>

<div class="row">
    <div class="col-6">
        <form asp-action="Update" asp-controller="Patient">
            <div class="form-group visually-hidden">
                <label asp-for="@Model.Id" class="col-form-label"></label>
                <input asp-for="@Model.Id" class="form-control"></input>
                <span asp-validation-for="@Model.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.UserName" class="col-form-label"></label>
                <input asp-for="@Model.UserName" class="form-control"></input>
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="@Model.Email" class="col-form-label"></label>
                <input asp-for="@Model.Email" class="form-control"></input>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="@Model.PhoneNumber" class="col-form-label"></label>
                <input asp-for="@Model.PhoneNumber" class="form-control"></input>
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="@Model.BloodType" class="col-form-label"></label>
                <input asp-for="@Model.BloodType" class="form-control"></input>
                <span asp-validation-for="@Model.BloodType" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="@Model.Governorate" class="col-form-label"></label>
                <input asp-for="@Model.Governorate" class="form-control"></input>
                <span asp-validation-for="@Model.Governorate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="@Model.Province" class="col-form-label"></label>
                <input asp-for="@Model.Province" class="form-control"></input>
                <span asp-validation-for="@Model.Province" class="text-danger"></span>
            </div>
            <br />
            <input type="submit" value="Update" class="btn btn-success" />
            <a asp-controller="Admin" asp-action="Patients" class="btn btn-light">Back To List</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}