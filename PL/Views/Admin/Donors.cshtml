@model IEnumerable<DonorDto>
@{
    ViewData["Title"] = "Donors";
    Layout = "~/Views/Shared/admin_Layout.cshtml";
}

<h1>Donors</h1>
<br />


@if (Model?.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(x => x.Id)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.UserName)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.BloodType)</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.BloodType</td>
                    <td>
                        <a class="btn btn-success" asp-controller="Donor" asp-action="Details" asp-route-id="@item.Id">
                            Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Donor" asp-action="Update" asp-route-id="@item.Id">
                            Update
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Donor" asp-action="Delete" asp-route-id="@item.Id">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Donors Found!</h3>
    </div>
}