@model IEnumerable<FollowUpFormDto>
@{
    ViewData["Title"] = "Forms";
    Layout = "~/Views/Shared/admin_Layout.cshtml";
}

<h1>
    Forms
</h1>
<br />


@if (Model?.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(x => x.Id)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.RequestId)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.PatientId)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.DonorId)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.DateTime)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Question1)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Question2)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Question3)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Question4)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Feedback)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Rating)</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.RequestId</td>
                    <td>@item.PatientId</td>
                    <td>@item.DonorId</td>
                    <td>@item.DateTime</td>
                    <td>@item.Question1</td>
                    <td>@item.Question2</td>
                    <td>@item.Question3</td>
                    <td>@item.Question4</td>
                    <td>@item.Feedback</td>
                    <td>@item.Rating</td>
                    <td>
                        <a class="btn btn-success" asp-controller="Form" asp-action="Details" asp-route-id="@item.Id">
                            Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Form" asp-action="Delete" asp-route-id="@item.Id">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Forms Found!</h3>
    </div>
}